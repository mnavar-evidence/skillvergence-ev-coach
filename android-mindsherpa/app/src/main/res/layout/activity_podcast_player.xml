<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_color">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/surface_color"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Podcast"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <!-- Placeholder for symmetry -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Podcast Artwork -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/md_theme_light_surfaceVariant">

                <ImageView
                    android:id="@+id/podcast_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_headphones_24dp"
                    android:contentDescription="Podcast artwork" />

                <!-- Loading overlay -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_overlay">

                    <ProgressBar
                        android:id="@+id/loading_indicator"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/md_theme_light_primary"
                        android:visibility="gone" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Episode Info -->
            <TextView
                android:id="@+id/episode_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High Voltage Safety Foundation â€¢ Episode 1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/md_theme_light_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Podcast Title -->
            <TextView
                android:id="@+id/podcast_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High Voltage Safety Fundamentals"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="12dp" />

            <!-- Podcast Description -->
            <TextView
                android:id="@+id/podcast_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essential safety protocols and risk assessment for working with high voltage EV systems"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="#666666"
                android:gravity="center"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginBottom="32dp" />

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Time display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/text_primary"
                        android:fontFeatureSettings="tnum" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/text_primary"
                        android:fontFeatureSettings="tnum" />

                </LinearLayout>

                <!-- Progress Bar -->
                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/md_theme_light_primary"
                    android:progressBackgroundTint="@color/md_theme_light_outline"
                    android:thumbTint="@color/md_theme_light_primary" />

            </LinearLayout>

            <!-- Transport Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Skip Backward -->
                <ImageButton
                    android:id="@+id/skip_backward_button"
                    android:layout_width="@dimen/transport_button_size_main"
                    android:layout_height="@dimen/transport_button_size_main"
                    android:background="@drawable/rounded_transport_button"
                    android:src="@drawable/ic_replay_15_24dp"
                    android:padding="@dimen/transport_button_padding_main"
                    android:scaleType="centerInside"
                    android:contentDescription="Skip backward 15 seconds"
                    app:tint="@color/md_theme_light_onPrimary"
                    android:layout_marginEnd="@dimen/transport_button_spacing" />

                <!-- Play/Pause Button -->
                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="@dimen/transport_button_size_large"
                    android:layout_height="@dimen/transport_button_size_large"
                    android:background="@drawable/rounded_transport_button"
                    android:src="@drawable/ic_play_circle_24dp"
                    android:padding="@dimen/transport_button_padding_large"
                    android:scaleType="centerInside"
                    android:contentDescription="Play/Pause"
                    app:tint="@color/md_theme_light_onPrimary" />

                <!-- Skip Forward -->
                <ImageButton
                    android:id="@+id/skip_forward_button"
                    android:layout_width="@dimen/transport_button_size_main"
                    android:layout_height="@dimen/transport_button_size_main"
                    android:background="@drawable/rounded_transport_button"
                    android:src="@drawable/ic_forward_15_24dp"
                    android:padding="@dimen/transport_button_padding_main"
                    android:scaleType="centerInside"
                    android:contentDescription="Skip forward 15 seconds"
                    app:tint="@color/md_theme_light_onPrimary"
                    android:layout_marginStart="@dimen/transport_button_spacing" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>