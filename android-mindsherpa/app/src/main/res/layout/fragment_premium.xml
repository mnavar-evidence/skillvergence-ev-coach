<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/premium_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium Advanced Courses"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/premium_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎓 Professional Certificate Programs:\n\n⚡ Advanced High Voltage Safety\n🔋 Battery Management Systems Expert\n🔌 DC Fast Charging Infrastructure\n🔧 EV Diagnostics &amp; Repair Professional\n🏗️ Vehicle-to-Grid Integration Systems\n\nUnlock professional certifications and advanced learning content."
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.5" />

    </LinearLayout>

</ScrollView>