<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/surface_color">

    <!-- Settings Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="8dp">

        <!-- Exit Teacher Mode Button -->
        <LinearLayout
            android:id="@+id/exit_teacher_mode_item"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_exit_to_app_24dp"
                android:tint="@color/md_theme_light_error"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exit Teacher Mode"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_error" />

        </LinearLayout>

    </LinearLayout>

    <!-- Class Code Management -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Management"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Current Class Code Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class Join Code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/current_class_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No code generated"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textColor="@color/md_theme_light_primary"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:id="@+id/copy_code_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_send_24dp"
                    android:tint="@color/md_theme_light_primary"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/class_code_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students use this code to join your class and unlock basic access"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

        </LinearLayout>


    </LinearLayout>

    <!-- Certificate Settings -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Certificate Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Auto-approve certificates toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto-approve certificates"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/auto_approve_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Minimum completion percentage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minimum completion for certificate"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/completion_percentage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textSize="16sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/completion_percentage_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="30"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/completion_footer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students must complete at least 80% of a course to be eligible for a certificate."
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>