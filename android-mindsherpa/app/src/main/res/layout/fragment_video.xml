<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Level Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI / Video Courses"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/level_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/ai_response_background"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/level_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_star_24dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Course List with AI card as footer -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/courses_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Hidden AI components for programmatic access -->
        <LinearLayout
            android:id="@+id/ai_components_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ai_coach_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Coach Nova Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/coach_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_brain_24dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Coach Nova" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coach Nova"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <!-- AI Response Display -->
                    <ScrollView
                        android:id="@+id/ai_response_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="120dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/ai_response_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:lineSpacingMultiplier="1.2"
                            android:background="@drawable/ai_response_background"
                            android:padding="12dp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </ScrollView>

                    <!-- Quick Questions -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/quick_questions_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start">

                        <!-- Quick question chips will be added programmatically -->

                    </com.google.android.flexbox.FlexboxLayout>

                    <!-- Question Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/question_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ask Coach Nova anything..."
                        app:boxStrokeWidth="1dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_send_24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/question_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:inputType="textMultiLine|textCapSentences" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Loading Indicator -->
                    <LinearLayout
                        android:id="@+id/ai_loading_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <ProgressBar
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            style="?android:attr/progressBarStyleSmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coach Nova is thinking..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>