<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ai_coach_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Coach Nova Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/coach_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_brain_24dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Coach Nova" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coach Nova"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/md_theme_light_primary" />

            <!-- XP Badge for AI interactions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/ai_response_background"
                android:padding="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_star_24dp"
                    android:scaleType="centerInside"
                    android:tint="@color/md_theme_light_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10 XP"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="@color/md_theme_light_secondary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- AI Response Display -->
        <ScrollView
            android:id="@+id/ai_response_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/ai_response_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:lineSpacingMultiplier="1.2"
                android:background="@drawable/ai_response_background"
                android:padding="12dp"
                android:textColor="#666666" />

        </ScrollView>

        <!-- Quick Questions -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/quick_questions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <!-- Quick question chips will be added programmatically -->

        </com.google.android.flexbox.FlexboxLayout>

        <!-- Question Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/question_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ask Coach Nova anything..."
            app:boxStrokeWidth="1dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_send_24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/question_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:inputType="textMultiLine|textCapSentences" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/ai_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                style="?android:attr/progressBarStyleSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach Nova is thinking..."
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
