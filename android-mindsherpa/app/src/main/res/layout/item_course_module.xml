<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Module Number -->
        <TextView
            android:id="@+id/module_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1.1"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"
            android:background="@drawable/rounded_transport_button"
            android:backgroundTint="?attr/colorPrimary"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <!-- Module Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Module Title -->
            <TextView
                android:id="@+id/module_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.1 High Voltage Safety Fundamentals"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Module Description -->
            <TextView
                android:id="@+id/module_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foundation principles of high voltage electrical safety, risk assessment, and hazard identification."
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Module Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Duration -->
                <TextView
                    android:id="@+id/module_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 min"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:drawableStart="@drawable/ic_play_circle_24dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <!-- XP Reward -->
                <TextView
                    android:id="@+id/module_xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 XP"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_star_24dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    app:drawableTint="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Play Button -->
        <ImageView
            android:id="@+id/play_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_circle_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:contentDescription="Play module"
            app:tint="?attr/colorPrimary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>