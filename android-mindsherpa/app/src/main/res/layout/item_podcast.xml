<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/podcast_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/md_theme_light_surfaceVariant"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Podcast Artwork -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/md_theme_light_primaryContainer">

            <ImageView
                android:id="@+id/podcast_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_headphones_24dp"
                android:contentDescription="Podcast artwork" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Podcast Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Episode Number -->
            <TextView
                android:id="@+id/episode_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Episode 1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/md_theme_light_primary"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                tools:text="Episode 1" />

            <TextView
                android:id="@+id/podcast_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electrifying the Road: Unpacking the Physics and Power of EV Motors"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="#666666"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Electrifying the Road: Unpacking the Physics and Power of EV Motors" />

            <TextView
                android:id="@+id/podcast_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Deep dive into electric vehicle motor physics, power delivery systems"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Deep dive into electric vehicle motor physics, power delivery systems" />

            <!-- Duration and Progress Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_clock_24dp"
                    android:layout_marginEnd="4dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/podcast_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30:00"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="#666666"
                    tools:text="30:00" />

                <TextView
                    android:id="@+id/podcast_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Played 15:30"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="@color/md_theme_light_primary"
                    android:visibility="gone"
                    tools:text="Played 15:30"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:max="100"
                android:progressTint="@color/md_theme_light_primary"
                android:progressBackgroundTint="@color/md_theme_light_surfaceVariant"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- XP and Play Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <!-- XP Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/ai_response_background"
                android:padding="4dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_star_24dp"
                    android:scaleType="centerInside"
                    android:tint="@color/md_theme_light_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 XP"
                    android:textSize="9sp"
                    android:textColor="@color/md_theme_light_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Play Button -->
            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_play_circle_24dp"
                android:contentDescription="Play podcast"
                app:tint="@color/md_theme_light_primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>