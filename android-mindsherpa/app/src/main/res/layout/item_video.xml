<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Video Thumbnail -->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/holo_blue_light"
                android:contentDescription="Video thumbnail"
                tools:src="@android:drawable/ic_media_play" />

        </androidx.cardview.widget.CardView>

        <!-- Video Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.1 EV Safety Pyramid - Who's Allowed to Touch"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="1.1 EV Safety Pyramid - Who's Allowed to Touch" />

            <TextView
                android:id="@+id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:10"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="4dp"
                tools:text="6:10" />

        </LinearLayout>

        <!-- Status and Play Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/completion_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ 100%"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                tools:text="✅ 100%" />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_play_circle_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:contentDescription="Play video"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>