# Production Environment Variables for Railway
NODE_ENV=production
PORT=3000

# Database Configuration (Railway will provide these)
DATABASE_URL=${POSTGRES_URL}
POSTGRES_URL=${POSTGRES_URL}

# CORS Configuration - Add your iOS app domain
CORS_ORIGIN=https://ev-coach.railway.app

# API Keys (Production)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Security
JWT_SECRET=${JWT_SECRET}

# Logging
LOG_LEVEL=info

# Analytics
ANALYTICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5mb