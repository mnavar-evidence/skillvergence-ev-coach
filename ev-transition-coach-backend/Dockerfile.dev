# Development Dockerfile for local Docker Compose
FROM node:18-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Start with nodemon for development
CMD ["npm", "run", "dev"]